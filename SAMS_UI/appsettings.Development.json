//Use this to configure appsettings.json

{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "YOUR-DESIRED-FILE-PATH",    //Change here
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },

  "Api": {
    "BaseUrl": "YOUR_API_URL"   //Change here
  },

  "ServiceAuth": {
    "Id": "CLIENT_ID_FOR_SERVICE_AUTH",                 //Change these, If not present seed users using the DbInitializer in the API. Then use the generated id and secret here
    "UserSecret": "CLIENT_SECRET_FOR_SERVICE_AUTH"
  },

  "ConnectionStrings": {
    "DefaultConnection": "Server=YOUR_SERVER;Database=YOUR_DATABASE;User Id=CHANGE_THIS;Password=CHANGE_THIS;TrustServerCertificate=True;"  //customize this to you db credentials

  },

  "AllowedHosts": "*"
}
