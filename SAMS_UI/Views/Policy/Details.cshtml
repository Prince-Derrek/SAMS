﻿@using SAMS_UI.Services.Interfaces
@using SAMS_UI.Models
@using SAMS_UI.ViewModels
@model RolePolicyAssignmentViewModel
@inject IViewPolicyService ViewPolicyService
@{
    ViewData["Title"] = "Policy Details";
    var allRoles = ViewBag.AllRoles as List<RoleViewModel>;
    var policyName = (string)ViewBag.Name;
    var userPolicies = await ViewPolicyService.GetPoliciesForCurrentUserAsync(User);
}

<div class="flex items-center justify-start mb-8 pb-4 gap-3">
    <!-- Back Icon Link -->
    <a asp-action="Index" class="text-gray-400 border border-gray-400 dark:text-black hover:text-matisse-600 transition-colors">
        <svg class="w-[22px] h-[22px]" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="m15 19-7-7 7-7" />
        </svg>
    </a>

    <!-- Title -->
    <h3 class="text-l font-nunito-sans text-matisse-600 dark:text-matisse-900">POLICY:   @Model.PolicyName</h3>
</div>

<h3 class="flex items-start mb-10 text-2xl pl-1 font-medium text-gray-900 dark:text-white">
    <span class="text-matisse-600 bg-clip-text text-nunito-sans">Assigned Roles</span>
</h3>

@if (userPolicies.Contains("CanAssignPolicies"))
{
    <h4 class="text-masala-800 mb-3">Assign This Policy to a Role</h4>
    <div class="mb-2">
        <form asp-action="AssignPolicy" method="post">
            <input type="hidden" name="policyId" value="@Model.PolicyId" />
            <select name="roleId" class="form-select w-44 text-masala-800 rounded mr-3 ">
                <option value="" disabled selected hidden>--Select a role--</option>
                @foreach (var role in allRoles.Where(r => !Model.AssignedPolicyIds.Contains(r.Id)))
                {
                    <option value="@role.Id">@role.Name</option>
                }
            </select>
            <button type="submit" class="bg-blue-950 text-white px-3 py-1 rounded">Assign</button>
        </form>
    </div>
}


<div class="overflow-x-auto border border-gray-300 sm:rounded-lg mt-5 mb-3 ">
    <table class="w-full text-sm text-left rtl:text-right text-masala-800 dark:text-gray-50">
        <thead class="text-xs text-masala-800 uppercase border-b border-gray-300 bg-mustard-100 font-medium rounded-full text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700 dark:text-white">
            <tr>
                <th scope="col" class="border-r border-gray-300 px-6 py-3">
                    Role
                </th>
                <th scope="col" class=" border-r border-gray-300 px-3 py-3 w-25 text-center">
                    Remove
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in allRoles.Where(r => Model.AssignedPolicyIds.Contains(r.Id)))
            {
                <tr class=" text-masala-800 bg-mustard-50 border-b border-gray-300 dark:border-black">
                    <td class=" border-r border-gray-300 px-6 py-4">
                        @role.Name
                    </td>
                    @if (userPolicies.Contains("CanAssignPolicies"))
                    {
                        <td class="px-3 py-4 w-25 text-center">
                            <!-- Trigger Button -->
                            <button type="button"
                                    data-modal-target="remove-policy-from-role-@role.Id"
                                    data-modal-toggle="remove-policy-from-role-@role.Id"
                                    class="bg-red-700 text-white w-44 px-3 py-1 rounded">
                                Remove
                            </button>
                            <div id="remove-policy-from-role-@role.Id" tabindex="-1"
                                 class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
                                <div class="relative p-4 w-full max-w-md max-h-full">
                                    <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
                                        <button type="button"
                                                class="absolute top-3 end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
                                                data-modal-hide="remove-policy-from-role-@role.Id">
                                            <svg class="w-3 h-3" fill="none" viewBox="0 0 14 14">
                                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                      d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                                            </svg>
                                            <span class="sr-only">Close modal</span>
                                        </button>
                                        <div class="p-4 md:p-5 text-center">
                                            <svg class="mx-auto mb-4 text-mexican-red-700 w-12 h-12 dark:text-gray-200" fill="none" viewBox="0 0 20 20">
                                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                      d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                                            </svg>
                                            <h3 class="mb-5 text-lg font-normal text-gray-500 dark:text-gray-400">
                                                Are you sure you want to remove the role:
                                                <span class="font-semibold text-gray-700">"@role.Name"</span>
                                                from accessing the policy:
                                                <span class="font-semibold text-gray-700">"@Model.PolicyName"</span>
                                            </h3>

                                            <!-- Form Submission -->
                                            <form asp-action="RemovePolicyFromRole" method="post" class="inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="roleId" value="@role.Id" />
                                                <input type="hidden" name="policyId" value="@Model.PolicyId" />

                                                <button type="submit"
                                                        class="text-white bg-mexican-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center"
                                                        data-modal-hide="remove-policy-from-role-@role.Id">
                                                    Yes, remove
                                                </button>
                                            </form>

                                            <button type="button"
                                                    class="py-2.5 px-5 ms-3 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700"
                                                    data-modal-hide="remove-policy-from-role-@role.Id">
                                                Cancel
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </td>
                    }

                </tr>
            }
        </tbody>
    </table>
</div>